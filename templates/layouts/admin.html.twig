<html lang="en" translate="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Admin{% endblock %}</title>
    <link rel="stylesheet" href="/public/styles/output.css" />
    {% block headscripts %}{% endblock %}
</head>
<body class="bg-gray-100">
    <main class="flex flex-col text-bkg relative">
        <a href="/"
           class="absolute text-gray-600 hover:text-text top-4 right-8 bg-transparent hover:bg-gray-600 px-8 py-2">
            Main Site
        </a>

        <div class="flex items-start justify-start gap-x-2 h-screen w-full pt-20">
            {# Sidebar #}
            <div class="w-1/3 max-w-160 h-full flex flex-col pl-8 py-12 pr-4 border-r-1 border-r-gray-300 gap-y-0.5">
                {% include "components/admin/sidebar-link.html.twig" with {
                    "href" : "/admin/dashboard",
                    "text" : "Dashboard"
                } %}
                {% include "components/admin/sidebar-link.html.twig" with {
                    "href" : "/admin/guest-list",
                    "text" : "Guest List"
                } %}
                {% include "components/admin/sidebar-link.html.twig" with {
                    "href" : "/admin/logout",
                    "text" : "Logout"
                } %}
            </div>

            {# Main Panel #}
            <div class="w-full h-full flex">
                {% block main %}{% endblock %}
            </div>
        </div>

    </main>
    <script src="/public/js/admin.js"></script>
</body>
</html>
